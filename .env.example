# Environment variables for local development
# Copy this file to .env and fill in your values

# =============================================
# DEVELOPMENT MODE CONFIGURATION
# =============================================
# Set which services to use: "local" or "cloud"
DB_MODE="supabase"        # Options: "local" | "supabase"
REDIS_MODE="local"        # Options: "local" | "upstash"

# =============================================
# DATABASE CONFIGURATION
# =============================================

# SUPABASE CONFIGURATION (Cloud PostgreSQL)
# Get these values from your Supabase project dashboard
SUPABASE_URL="https://[YOUR_PROJECT_REF].supabase.co"
SUPABASE_ANON_KEY="[YOUR_ANON_KEY]"
SUPABASE_SERVICE_ROLE_KEY="[YOUR_SERVICE_ROLE_KEY]"
DATABASE_URL_SUPABASE="postgresql://postgres:[YOUR_PASSWORD]@db.[YOUR_PROJECT_REF].supabase.co:5432/postgres"

# LOCAL POSTGRESQL CONFIGURATION (Docker)
DATABASE_URL_LOCAL="postgresql://postgres:postgres@localhost:5432/grab_apis_dev"
DATABASE_HOST_LOCAL="localhost"
DATABASE_PORT_LOCAL="5432"
DATABASE_NAME_LOCAL="grab_apis_dev"
DATABASE_USER_LOCAL="postgres"
DATABASE_PASSWORD_LOCAL="postgres"

# ACTIVE DATABASE URL (automatically set based on DB_MODE)
# This will be set programmatically in your app configuration
DATABASE_URL="${DB_MODE === 'supabase' ? DATABASE_URL_SUPABASE : DATABASE_URL_LOCAL}"

# =============================================
# REDIS CONFIGURATION  
# =============================================

# UPSTASH REDIS CONFIGURATION (Cloud Redis)
# Get these values from your Upstash dashboard
UPSTASH_REDIS_REST_URL="https://[YOUR_ENDPOINT].upstash.io"
UPSTASH_REDIS_REST_TOKEN="[YOUR_TOKEN]"
REDIS_URL_UPSTASH="redis://:[YOUR_PASSWORD]@[YOUR_ENDPOINT].upstash.io:6379"

# LOCAL REDIS CONFIGURATION (Docker)
REDIS_URL_LOCAL="redis://:redis_password@localhost:6379"
REDIS_HOST_LOCAL="localhost"
REDIS_PORT_LOCAL="6379"
REDIS_PASSWORD_LOCAL="redis_password"

# ACTIVE REDIS URL (automatically set based on REDIS_MODE)
# This will be set programmatically in your app configuration
REDIS_URL="${REDIS_MODE === 'upstash' ? REDIS_URL_UPSTASH : REDIS_URL_LOCAL}"

# =============================================
# REDIS CONFIGURATION  
# =============================================
REDIS_URL="redis://:redis_password@localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD="redis_password"

# =============================================
# APPLICATION CONFIGURATION
# =============================================
NODE_ENV="development"
PORT="3000"
API_PORT="8000"

# =============================================
# SECURITY CONFIGURATION
# =============================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_ALGORITHM="HS256"
JWT_EXPIRATION="7d"

# =============================================
# API KEYS (Optional - for external APIs)
# =============================================
# OPENWEATHER_API_KEY="your-openweather-api-key"
# RAPIDAPI_KEY="your-rapidapi-key"
# NEWSAPI_KEY="your-newsapi-key"

# =============================================
# NEXTJS PUBLIC VARIABLES
# =============================================
NEXT_PUBLIC_API_URL="http://localhost:8000"
NEXT_PUBLIC_APP_NAME="Grab Some APIs"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# =============================================
# DEVELOPMENT TOOLS
# =============================================
# Set to "true" to enable debug logging
DEBUG="false"
LOG_LEVEL="info"

# =============================================
# FASTAPI CONFIGURATION
# =============================================
UVICORN_HOST="0.0.0.0"
UVICORN_PORT="8000"
UVICORN_RELOAD="true"

# =============================================
# CORS CONFIGURATION
# =============================================
BACKEND_CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"

# =============================================
# EMAIL CONFIGURATION (Optional)
# =============================================
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"
# FROM_EMAIL="noreply@grab-apis.com"
