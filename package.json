{
  "name": "grab-some-apis",
  "version": "0.1.0",
  "type": "module",
  "description": "A unified dashboard of free public APIs with interactive widgets and fun pages",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/SSlimShady/grab-some-apis.git"
  },
  "author": "SSlimShady",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@grab-some-apis/web",
    "dev:api": "turbo dev --filter=@grab-some-apis/api",
    "build": "turbo build",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:e2e": "turbo test:e2e",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "type-check": "turbo type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,json,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,md,json,yaml,yml}\"",
    "clean": "turbo clean && rimraf node_modules .turbo",
    "clean:install": "pnpm clean && pnpm install",
    "docker:up": "docker-compose --profile local-db up -d",
    "docker:down": "docker-compose down",
    "docker:reset": "docker-compose down -v",
    "docker:redis": "docker-compose up -d redis",
    "docker:postgres": "docker-compose --profile local-db up -d postgres",
    "tools:up": "docker-compose --profile tools up -d",
    "tools:down": "docker-compose --profile tools down",
    "dev:local": "docker-compose up -d redis && docker-compose --profile local-db up -d postgres && turbo dev",
    "dev:cloud": "turbo dev",
    "env:switch": "node tools/switch-env.js",
    "env:status": "node tools/switch-env.js --status",
    "env:check": "node tools/validate-env.js",
    "format:python": "cd apps/api && poetry run black . --line-length 120 && poetry run isort . && poetry run autopep8 --in-place --aggressive --max-line-length=120 --recursive .",
    "prepare": "node -e \"if (process.env.NODE_ENV !== 'production' && !process.env.CI) { const { execSync } = require('child_process'); execSync('husky', { stdio: 'inherit' }); }\""
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.33.0",
    "@turbo/gen": "^2.5.6",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.6",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "volta": {
    "node": "22.12.0",
    "pnpm": "10.15.0"
  }
}
