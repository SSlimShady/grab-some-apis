{
  "name": "@grab-some-apis/api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "poetry run uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "start": "poetry run uvicorn app.main:app --host 0.0.0.0 --port 8000",
    "test": "poetry run pytest",
    "test:watch": "poetry run pytest --watch",
    "test:coverage": "poetry run pytest --cov=app --cov-report=html --cov-report=term",
    "lint": "poetry run flake8 app tests",
    "lint:fix": "poetry run black app tests && poetry run isort app tests",
    "type-check": "poetry run mypy app",
    "format": "poetry run black app tests && poetry run isort app tests",
    "postinstall": "echo 'Python dependencies managed by Poetry - run poetry install separately'",
    "clean": "find . -type d -name __pycache__ -delete && find . -name '*.pyc' -delete"
  }
}
