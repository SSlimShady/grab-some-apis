# Editor Configuration
# This file helps maintain consistent coding styles across different editors and IDEs
# Learn more: https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,vue,svelte}]
indent_style = space
indent_size = 2

[*.{json,yaml,yml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

[*.{html,css,scss,sass,less}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.go]
indent_style = tab

[*.{sh,bash,zsh,fish}]
indent_style = space
indent_size = 2
